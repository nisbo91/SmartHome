<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gruppe180.smarthome.ControlActivity"
    android:background="@drawable/smarthome"
    android:id="@+id/controlActivityMainLayout"
    android:gravity="center_horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/topFrame"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bottomFrame"
        android:layout_marginTop="28dp"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomFrame"
        android:layout_below="@+id/topFrame"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true"></FrameLayout>

</RelativeLayout>
